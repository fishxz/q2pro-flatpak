{
    "app-id": "com.game.q2pro",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio",
        "--persist=.q2pro"
	],
    "command": "q2pro",
    "rename-icon": "q2pro",
    "rename-desktop-file": "q2pro.desktop",
    ],
    "modules": [
        {
            "name": "q2pro",
            "buildsystem": "simple",
            "build-commands": [
                "make"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/AndreyNazarov/q2pro.git"
                },
                {
                    "type": "file",
                    "path": "com.game.q2pro.appdata.xml"
                },
                {
                    "type": "file",
                    "path": ".config"
                }
            ],
            "post-install": [
                "mkdir -p /app/bin",
                "cp q2pro /app/bin",
                "mkdir -p /app/share/appdata",
                "cp com.game.q2pro.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/applications",
                "cp src/unix/res/q2pro.desktop /app/share/applications",
                "mkdir -p /app/share/icons/hicolor/32x32/apps",
                "cp src/unix/res/q2pro.xpm /app/share/icons/hicolor/32x32/apps",
                "mkdir -p /app/share/q2pro/baseq2",
                "cp game*.so /app/share/q2pro/baseq2",
                "cp src/client/ui/q2pro.menu /app/share/q2pro/baseq2"
            ]
        }
    ]
}
